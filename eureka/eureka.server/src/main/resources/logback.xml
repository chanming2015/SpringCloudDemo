<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<property name="contextName" value="eureka_server"/>
    <property name="FILE_NAME_BASE" value="${contextName}"/>
    <property name="layoutPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{0}:%L-%X{ID}- %msg%n"/>
    <contextName>${contextName}</contextName>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${layoutPattern}</pattern>
        </encoder>
    </appender>
	
	<appender name="${FILE_NAME_BASE}-syslog" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>${SYSLOG_HOST}</syslogHost>
        <facility>LOCAL1</facility>
        <suffixPattern>${layoutPattern}</suffixPattern>
        <charset class="java.nio.charset.Charset">UTF-8</charset>
    </appender>
    
    <root level="INFO">
    	<appender-ref ref="STDOUT"/>
    	<appender-ref ref="${FILE_NAME_BASE}-syslog" />
    </root>
</configuration>
